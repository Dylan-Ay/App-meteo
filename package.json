{
  "name": "ma-meteo",
  "version": "1.0.0",
  "description": "Application de données météorologiques complète.",
  "main": "./main/main.js",
  "scripts": {
    "start": "set NODE_ENV=development&&electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:css": "tailwindcss -i ./style.css -o ./src/output.css --watch",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.monapp.meteo",
    "productName": "Ma-Météo",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "build/shortcut-icon.ico"
    },
    "extraResources": [
      "keys.enc",
      "secret.env"
    ]
  },
  "author": "Dylan Ayache",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "dotenv": "^17.2.3",
    "tailwindcss": "^4.1.16",
    "translate": "^3.0.1"
  }
}
